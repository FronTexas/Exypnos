<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_green" >

    <TextView
        android:id="@+id/ivExypnos_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="200dp"
        android:text="Exypnos"
        android:textColor="@color/White"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivExypnos_logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivSignInGoogle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_in_box_google" />

        <ImageView
            android:id="@+id/ivSignInFacebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_in_box_facebook" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivSignInBox"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/sign_in_box" />

            <ImageView
                android:id="@+id/ivSignUpBox"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/sign_up_box" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>