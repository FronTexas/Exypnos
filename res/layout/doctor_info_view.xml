<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlDoctorList"
        android:layout_width="350dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llDoctorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDoctorNameOnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Name"
                android:textColor="@color/Gray" />

            <TextView
                android:id="@+id/tvDoctorTypeOnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Type"
                android:textColor="@color/Gray" />

            <TextView
                android:id="@+id/tvDoctorDateOnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment Date"
                android:textColor="@color/Gray" />

            <TextView
                android:id="@+id/tvDoctorAddressOnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Search"
                android:textColor="@color/Gray" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivOptionBars"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_optionbars" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/greenSeparator"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/GreenMilk"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>